<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.teamapp.teamapp.group.ui.CreateGroup_Activity">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/EventTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name" />

        <EditText
            android:id="@+id/groupNameET"
            style="@style/EditTextStyle"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:hint="Type Name Here !"
            android:maxLength="25"
            android:maxLines="1" />

        <TextView
            style="@style/EventTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Description" />

        <EditText
            android:id="@+id/groupDescriptionET"
            style="@style/EditTextStyle"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:hint="@string/write_a_brief_description_about_community"
            android:maxLength="50"
            android:maxLines="5" />



        <Button
            android:id="@+id/groupSaveB"
            style="@style/ButtonStyle"
            android:layout_gravity="right"
            android:layout_margin="3dp"
            android:text="Save" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
